<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808080"
        tools:context=".MainActivity">



    <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:text="Chat without saving phone number of the recipient."
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">


            <!--<com.rengwuxian.materialedittext.MaterialEditText
                    android:focusable="true"
                    android:drawableStart="@drawable/ic_arrow_drop_down_black_24dp"
                    android:inputType="phone"
                    android:drawablePadding="5dp"
                    app:met_primaryColor="#450150"
                    android:id="@+id/phone"
                    android:hint="Phone Number"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="10"
            />-->


            <net.rimoto.intlphoneinput.IntlPhoneInput
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:textSize="20sp"
                    app:textColor="#942345"
                    app:flagPaddingEnd="4dp"
                    android:id="@+id/phone" />
            <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/paste"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <EditText
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#942345"
                android:id="@+id/msg"
                android:hint="Any Message to share."
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/paste"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
    </LinearLayout>
        <LinearLayout
                android:layout_marginTop="30dp"

                android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

            <Button
                    android:layout_weight="1"
                    android:id="@+id/share"
                    android:text="Share"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            <Button android:layout_weight="1"
                    android:id="@+id/chat"
                    android:text="Chat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>